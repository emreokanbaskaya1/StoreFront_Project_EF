@model List<Order>

@{
    ViewData["Title"] = "OrderList";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}




<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Async Order List</h3>

                <div class="table-responsive">




                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Order Name</th>
                                <th>Customer</th>
                                <th>Order Quantity</th>
                                <th>Unit Price</th>
                                <th>Total Price</th>
                                <th>Status</th>
                                <th>Delete</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Product.ProductName</td>
                                    <td>@item.Customer.CustomerName   @item.Customer.CustomerSurname</td>
                                    <td>@item.OrderCount</td>

                                    <td>@item.UnitPrice TL</td>
                                    <td>@item.TotalPrice TL</td>
                                    <td>@item.Status</td>


                                    <td><a href="/Order/DeleteOrder/@item.OrderId" class="btn btn-outline-danger">Delete</a></td>
                                    <td><a href="/Order/UpdateOrder/@item.OrderId" class="btn btn-outline-success">Update</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Order/CreateOrder/" class="btn btn-outline-primary">Create New Order</a>
                </div>
            </div>
        </div>
    </div>
</div> <!-- Close .row -->
