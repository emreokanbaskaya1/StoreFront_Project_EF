@model Order

@{
    ViewData["Title"] = "CreateOrder";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add New Order</h4>

                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label for="exampleInputName1">Select Product</label>
                        <select asp-for="ProductId" asp-items="@ViewBag.products" class="form-control">
                            <option value="">-- Select Product --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Select Customer</label>
                        <select asp-for="CustomerId" asp-items="@ViewBag.customers" class="form-control">
                            <option value="">-- Select Customer --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Number of Order</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Enter number of order" asp-for="OrderCount">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Unit Price</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Enter number of unit price" asp-for="UnitPrice">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Total Price</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Enter number of total price" asp-for="TotalPrice">
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Create Order</button>

                </form>
            </div>
        </div>
    </div>

</div>
