@model List<Order>

@{
    ViewData["Title"] = "OrderListSearch";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Order List 2</h3>

                <div class="table-responsive">

                    <h2>Search Action By Status</h2>
                    <form asp-action="OrderListSearch" method="get">
                        <input type="text" name="name" placeholder="Example: Taşıma Durumunda" class="form-control" />
                        <br />
                        <br />
                        <label>Filter Type:</label>
                        <select name="filterType" class="form-control">
                            <option value="start">
                                If it starts with these letters
                            </option>
                            <option value="end">
                                If it ends with these letters
                            </option>
                        </select>
                        <br />
                        <button type="submit" class="btn btn-primary mt2">Search</button>


                    </form>


                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Order Name</th>
                                <th>Customer</th>
                                <th>Order Quantity</th>
                                <th>Unit Price</th>
                                <th>Total Price</th>
                                <th>Status</th>
                                <th>Delete</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@item.OrderId</td>
                                    <td>@item.ProductId</td>
                                    <td>@item.CustomerId</td>
                                    <td>@item.UnitPrice TL</td>
                                    <td>@item.TotalPrice TL</td>
                                    <td>@item.Status</td>


                                    <td><a href="/Order/DeleteOrder/@item.OrderId" class="btn btn-outline-danger">Delete</a></td>
                                    <td><a href="/Order/UpdateOrder/@item.OrderId" class="btn btn-outline-success">Update</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Order/CreateOrder/" class="btn btn-outline-primary">Create New Order</a>
                </div>
            </div>
        </div>
    </div>
</div> <!-- Close .row -->
