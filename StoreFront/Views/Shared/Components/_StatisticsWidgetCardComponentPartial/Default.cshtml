@*
    Statistic Widget
*@

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">Number of Category</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">@ViewBag.CategoryCount</h2>
                                    
                                </div>
                                <small class="text-gray">There are @ViewBag.CategoryCount in total.</small>
                            </div>
                            <div class="d-inline-block">
                                <i class="fas fa-chart-pie text-info icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">The highest priced product</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">$@ViewBag.MaxProductPrice</h2>
                                    <div class="d-flex align-items-center ml-md-2 mt-2 mt-md-0">
                                        <i class="far fa-clock text-muted"></i>
                                    </div>
                                </div>
                                <small class="text-gray">@ViewBag.productMaxPriceProductName</small>
                            </div>
                            <div class="d-inline-block">
                                <i class="fas fa-shopping-cart text-danger icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">The lowest priced product</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">$@ViewBag.MinProductPrice</h2>
                                    <div class="d-flex align-items-center ml-md-2 mt-2 mt-md-0">
                                        <i class="far fa-clock text-muted"></i>
                                    </div>
                                </div>
                                <small class="text-gray">@ViewBag.productMinPriceProductName</small>
                            </div>
                            <div class="d-inline-block">
                                <i class="fas fa-bell text-info icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- Close .row -->

        <div class="row">
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">Number of Total Product Stock</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">@ViewBag.totalSumProductStock</h2>

                                </div>
                                <small class="text-gray">There are @ViewBag.totalSumProductStock in stock.</small>
                            </div>
                            <div class="d-inline-block">
                                <i class="fas fa-comment text-warning icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">Number of Average Product Stock</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">$@ViewBag.averageProductStock</h2>
                                    <div class="d-flex align-items-center ml-md-2 mt-2 mt-md-0">
                                        <i class="far fa-clock text-muted"></i>
                                    </div>
                                </div>
                                <small class="text-gray">Number of Total Product Stock  / Product Stock Count </small>
                            </div>
                            <div class="d-inline-block">
                                <i class="fas fa-cubes text-primary icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">Average product price</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">$@ViewBag.averageProductPrice TL</h2>
                                    <div class="d-flex align-items-center ml-md-2 mt-2 mt-md-0">
                                        <i class="far fa-clock text-muted"></i>
                                    </div>
                                </div>
                                <small class="text-gray">Average Price for a product </small>

                            </div>

                            <div class="d-inline-block">
                                <i class="fas fa-desktop text-secondary icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- Close .row -->


        <div class="row">
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">
                            Number of products with a price greater than 1000 TL
                        </h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">@ViewBag.biggerPriceThan1000ProductCount</h2>

                                </div>
                                <small class="text-gray">There are @ViewBag.biggerPriceThan1000ProductCount.</small>
                            </div>
                            <div class="d-inline-block">
                                <i class="fas fa-clock text-success icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">Product name with a where id is 4</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">@ViewBag.GetIdis4ProductName</h2>
                                    <div class="d-flex align-items-center ml-md-2 mt-2 mt-md-0">
                                        <i class="far fa-coffee text-dark"></i>
                                    </div>
                                </div>
                                <small class="text-gray">ID = 4 </small>
                            </div>
                            <div class="d-inline-block">
                                <i class="fas fa-coffee text-primary icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">Number of Products where stock is between 50 to 100.</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">@ViewBag.StockBetween50to100ProductCount</h2>
                                    <div class="d-flex align-items-center ml-md-2 mt-2 mt-md-0">
                                        <i class="far fa-android text-primary"></i>
                                    </div>
                                </div>
                                <small class="text-gray">50 < x < 100 </small>

                            </div>

                            <div class="d-inline-block">
                                <i class="fas fa-filter text-body icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- Close .row -->





    </div> <!-- Close .content-wrapper -->
    <!-- content-wrapper ends -->
    <!-- partial:../partials/_footer.html -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2018 <a href="https://www.urbanui.com/" target="_blank">Urbanui</a>. All rights reserved.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="far fa-heart text-danger"></i></span>
        </div>
    </footer>
    <!-- partial -->
</div> <!-- Close .main-panel -->