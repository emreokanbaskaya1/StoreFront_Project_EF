@model Product
@{
    ViewData["Title"] = "Update Product";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update New Product</h4>

                <form class="forms-sample" method="post">

                    <div class="form-group">
                        <input type="hidden" asp-for="ProductId"/>
                        <label for="exampleInputName1">Product Name</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Enter the product name" asp-for="ProductName">
                    </div>

                    <div class ="form-group">
                        <label for="exampleInputName1">Product Price</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Enter the product price" asp-for="ProductPrice">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">Select Category</label>
                        <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control">
                            <option value="">-- Select Category --</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">Number of Stock</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Enter number of stock" asp-for="ProductStock">
                    </div>

                    <button type="submit" class="btn btn-success mr-2">Update Product</button>

                </form>
            </div>
        </div>
    </div>

</div>